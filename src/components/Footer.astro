---
import { t } from 'i18n:astro'

const { designed, developed } = t('footer', {
  returnObjects: true
})

const { designed_with: designedWith, designed_by: designedBy } = designed
const { developed_with: developedWith, developed_by: developedBy } = developed

const year = new Date().getFullYear()
---

<footer>
  <p>
    <span>
      Â© <span id="year">{year}</span>
      {designedWith}
      <video
        width="24"
        src="/media/heart.webm"
        preload="metadata"
        playsinline
        autoplay
        muted
        loop></video>
      {designedBy}
      <a
        href="https://juansadigital.com"
        target="_blank"
        rel="noopener noreferrer">JuansaDigital</a
      >
    </span>
    <span>
      {developedWith}
      <video
        width="24"
        src="/media/heart.webm"
        preload="metadata"
        playsinline
        autoplay
        muted
        loop></video>
      {developedBy}
    </span>
  </p>
  <nav class="footer-socials">
    <a
      href="https://www.facebook.com/juansadigital/"
      target="_blank"
      rel="noopener noreferrer"
      aria-label="Facebook">Facebook</a
    >
    <a
      href="https://www.instagram.com/juansadigital/"
      target="_blank"
      rel="noopener noreferrer"
      aria-label="Instagram">Instagram</a
    >
    <a
      href="https://x.com/JuanSaDigital"
      target="_blank"
      rel="noopener noreferrer"
      aria-label="X/Twitter">X</a
    >
    <a
      href="https://www.linkedin.com/company/juansadigital"
      target="_blank"
      rel="noopener noreferrer"
      aria-label="LinkedIn">LinkedIn</a
    >
    <a
      href="https://wa.me/message/VZOWCP5BYGXJD1"
      target="_blank"
      rel="noopener noreferrer"
      aria-label="WhatsApp">WhatsApp</a
    >
  </nav>
</footer>

<style>
  footer {
    padding-block: 67px;
    text-align: center;
    padding-inline: var(--mobile-inline-padding);

    @media (width >= 768px) {
      padding-inline: 0;
    }

    & p span video {
      display: inline-block;
      margin-inline: 4px;
    }

    & P > span:first-child::after {
      content: '|';
      display: inline-block;
      translate: 0 -1px;
      margin-right: 4px;
    }

    & a {
      color: var(--text-color);
      text-decoration: none;
      transition: var(--transition-text);

      @media (any-hover: hover) {
        &:hover {
          color: var(--text-description-color);
        }
      }
    }

    & video {
      translate: 0 -2px;
    }

    & .footer-socials {
      display: flex;
      justify-content: center;
      gap: 24px;
      margin-top: 24px;
      font-size: 0.875rem;
    }
  }
</style>

<script is:inline>
  document.querySelector('#year').textContent = new Date().getFullYear()
</script>
